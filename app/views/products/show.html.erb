<div class="row">
    <div class="col-md-12">
        <h1><%= @product.name %> <span class="badge badge-secondary">Product</span></h1>
    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title"><%= @product.price %></h4>
                <p class="card-text"><%= @product.description %></p>
                <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(@product.updated_at) %> ago by <%= @product.user.name %></small></p>
            </div>
        </div>
    </div>
    <div class="col-md-3 buttons">
        <%= link_to '<i class="fa fa-pencil-square-o fa-fw" aria-hidden="true"></i> Edit Product'.html_safe, edit_product_path, class: 'btn btn-success' %>
        <%= link_to '<i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> Delete Product'.html_safe, @product, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this product?' } %>
        <%= link_to '<i class="fa fa-arrow-left fa-fw" aria-hidden="true"></i> Back to List'.html_safe, list_product_path(@list), class: 'btn btn-primary' %>
    </div>
</div>