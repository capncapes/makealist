<div class="row">
    <div class="col-md-12">
        <h1><%= @list.name %> <span class="badge badge-secondary">
            <%= @list.list_type %> List
        </span></h1>
    </div>
    <div class="col-md-9">
        <p class="description"><%= @list.description %></p>
        <div class="list-group list-group-flush">
            <% if @list.list_type == 'basic' %>
                <p><%= render @list.basics %></p>
            <% elsif @list.list_type == 'product' %>
                <p><%= render @list.products %></p>
            <% end %>
        </div>
    </div>
    <div class="col-md-3 buttons">
        <%= link_to '<i class="fa fa-pencil-square-o fa-fw" aria-hidden="true"></i> Edit<span class="list-btn-list"> List</span>'.html_safe, edit_list_path, class: 'btn btn-success' %>
        <%= link_to '<i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> Delete<span class="list-btn-list"> List</span>'.html_safe, @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
            <% if @list.list_type == 'basic' %>
                <%= link_to '<i class="fa fa-plus fa-fw" aria-hidden="true"></i> Add List Item'.html_safe, new_list_basic_path(@list), class: 'btn btn-orange' %>
            <% elsif @list.list_type == 'product' %>
                <%= render 'products/form', product: Product.new, list: @list %>
            <% end %>
    </div>
</div>