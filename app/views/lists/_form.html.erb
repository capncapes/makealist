<%= form_for @list do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "List Name" %>
    </div>
    <div class="form-group">
        <%= f.label :list_type %>
        <%= f.select :list_type, options_for_select(List.list_types.keys), class: 'form-control', id: 'type-control-select' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Enter a description for your list..." %>
    </div>
    <div class="form-check">
        <%= f.label :private, class: 'form-check-input' do %>
            <%= f.check_box :private %> Private List
        <% end %>
    </div>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>