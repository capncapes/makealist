<%= form_for @list do |f| %>
    <div class="col-md-9">
        <%= render partial: 'form' %>
    </div>
    <div class="col-md-3">
        <p>Create your list.</p>
    </div>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "List Name" %>
    </div>
    <div class="form-group">
        <%= f.label :type %>
        <%= f.select :type, [['Basic', 1], ['Product', 2], ['Destination', 3]], class: 'form-control', id: 'type-control-select' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Enter a description for your list..." %>
    </div>
    <div class="form-check">
        <%= f.label :private, class: 'form-check-input' do %>
            <%= f.check_box :private %> Private List
        <% end %>
    </div>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>